@model IEnumerable<WebUI.Models.LocationVM>
@{
    ViewData["Title"] = "Index";
}

<h1>Branch Locations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @* @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | *@
                @Html.ActionLink("Manage Product", "UnclaimedList", "Product", new { locationId = item.Id}) |
                @Html.ActionLink("Manage Inventory", "ReplenishList", "Inventory", new { locationId = item.Id}) |
                @* @Html.ActionLink("View Order History", "Index", "Review", new { id = item.Id }) | *@
            </td>
        </tr>
}
    </tbody>
</table>
